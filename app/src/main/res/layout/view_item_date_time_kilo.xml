<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_24sdp"
    android:background="@drawable/bg_square_border"
    android:layout_margin="@dimen/_4sdp">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:45 AM"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/green01"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec 22, 2020"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_regular_2x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

    <TextView
        android:id="@+id/tvKilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1540 Kilo"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_square_round_border_gray_button"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toEndOf="@+id/tvDate"
        android:background="#000000"
        android:layout_marginLeft="@dimen/_24sdp"
        app:layout_goneMarginTop="@dimen/_24sdp"
        android:layout_marginTop="8dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>