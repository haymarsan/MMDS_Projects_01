<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98FB98">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:layout_margin="@dimen/_32sdp"
        android:background="@drawable/bg_square_round_border_plain"
        android:paddingStart="@dimen/margin_large"
        android:paddingEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_42sdp">


            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_img" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPhoneOrEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:text="Enter Your Phone Number or Email"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_regular_2xx"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPWForgetNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etPhoneOrEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Next"
            android:background="@drawable/bg_square_round_border_green_button"
            android:paddingLeft="@dimen/_32sdp"
            android:paddingEnd="@dimen/_32sdp"
            android:textSize="@dimen/text_regular_2x"
            android:layout_marginTop="@dimen/_32sdp"
            android:textAllCaps="false"/>

        <EditText
            android:id="@+id/etPhoneOrEmail"
            style="@style/TextBoxStyle"
            android:hint="09 *** *** *** or abcde@gmail.com"
            android:inputType="number|textEmailAddress"
            android:paddingStart="@dimen/content_padding"
            android:textSize="@dimen/text_regular_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>